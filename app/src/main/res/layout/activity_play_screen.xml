<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs117.musync.PlayScreen">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_play"
        android:id="@+id/playButton"
        android:layout_below="@+id/albumArtImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_next"
        android:id="@+id/nextButton"
        android:layout_alignTop="@+id/playButton"
        android:layout_alignRight="@+id/albumArtImage"
        android:layout_alignEnd="@+id/albumArtImage"
        android:layout_alignBottom="@+id/playButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_previous"
        android:id="@+id/prevButton"
        android:layout_alignTop="@+id/playButton"
        android:layout_alignLeft="@+id/albumArtImage"
        android:layout_alignStart="@+id/albumArtImage"
        android:layout_alignBottom="@+id/playButton" />

    <Button
        android:text=" Library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@android:drawable/ic_menu_save"
        android:id="@+id/libraryButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/albumArtImage"
        android:background="#F0F0"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/libraryButton"
        android:layout_centerHorizontal="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="party"
        android:ems="10"
        android:id="@+id/groupNameView"
        android:layout_alignBaseline="@+id/libraryButton"
        android:layout_alignBottom="@+id/libraryButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/playButton" />

    <Button
        android:text="Join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/joinButton"
        android:layout_alignBaseline="@+id/libraryButton"
        android:layout_alignBottom="@+id/libraryButton"
        android:layout_toLeftOf="@+id/libraryButton"
        android:layout_toStartOf="@+id/libraryButton" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:ems="14"
        android:text=""
        android:id="@+id/album_string"
        android:layout_alignTop="@+id/albumArtImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp"/>


</RelativeLayout>
